name: Build and Push Docker Image to Docker Hub
on:
  pull_request:
    branches:
      - main
  push:
    branches:
      - main
jobs:
  build_and_push_to_registry:
    name: Build And Push to Docker Hub
    runs-on: ubuntu-latest
    permissions: {}
    steps:
      - name: Check out the repository
        uses: actions/checkout@v3
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v2
      - name: Log in to Docker Hub
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}
      - name: Get short SHA
        id: slug
        run: echo ::set-output name=sha7::$(echo ${{ github.sha }} | cut -c1-7)
      - name: Extract metadata (tags, labels) for Docker
        id: meta
        uses: docker/metadata-action@v1
        with:
          images: docker.io/starkyv/devops-learning
          tags: ${{ steps.slug.outputs.sha7 }}-${{ github.ref_name }}
      - name: Storing short SHA
        id: store_sha
        run: echo Image_Tag= '${{ steps.slug.outputs.sha7 }}-${{ github.ref_name }}' >>$GITHUB_ENV
      - name: Checking Critical Values
        id: check
        run: "echo New_Image_Tag: ${{ env.Image_Tag }}"
      - name: Build and push Docker image
        uses: docker/build-push-action@v2
        with:
          context: .
          push: "true"
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}